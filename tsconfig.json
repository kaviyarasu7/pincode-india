{
    "compilerOptions": {
        "target": "es2015",
        "jsx": "react",
        "module" :"es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ]
}